<Window x:Class="FocalPoint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        Title="FocalPoint" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Height="90" Width="200">
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5">
        <Grid HorizontalAlignment="Stretch">
            <Image x:Name="Close" HorizontalAlignment="Right" Source="Images/close.png" Width="16"/>
        </Grid>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="5">
            <xctk:IntegerUpDown x:Name="Duration" Maximum="60" Minimum="1" Width="75"></xctk:IntegerUpDown>
            <Label Content="minutes"></Label>
        </StackPanel>
        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
            <Button x:Name="StartSession" Content="GO!" HorizontalAlignment="Left" VerticalAlignment="Center" Width="25" Margin="5"/>
            <Grid Width="155"  HorizontalAlignment="Stretch">
                <ProgressBar x:Name="PercentComplete" Height="25" VerticalAlignment="Center" IsTabStop="False" HorizontalAlignment="Stretch"/>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
