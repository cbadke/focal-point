<Window x:Class="FocalPoint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        Title="FocalPoint" Height="200" Width="346" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Width="336">
        <ProgressBar Height="25" Margin="10,0,10,10" VerticalAlignment="Bottom" IsTabStop="False"/>
        <Button x:Name="StartSession" Content="GO!" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="10,0,0,40"/>
        <Label Content="minutes" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="72,0,-39,62"/>
        <xctk:IntegerUpDown x:Name="Duration" FormatString="N0" Value="1" Increment="1" Maximum="100"  HorizontalAlignment="Left" Margin="10,81,0,65" Width="57" Height="25"/>
    </Grid>
</Window>
